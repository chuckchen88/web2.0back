<% include header.ejs %>
<div class="top">
    <span class="layui-breadcrumb" lay-separator="/">
        <a href="">作品管理</a>
        <a href="">作品列表</a>
        <a><cite>添加作品</cite></a>
    </span>
</div>
<div class="table-content">
    <div class="btns-self">

    </div>
    <div>
        <form class="layui-form" action="/admin/works/create" method="post">
            <div class="layui-form-item">
                <label class="layui-form-label">作品名称</label>
                <div class="layui-input-block">
                    <input type="text" name="workname" required  lay-verify="required" placeholder="请输入作品名称" autocomplete="off" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">类型</label>
                <div class="layui-input-block">
                    <select name="type" lay-verify="required">
                        <option value=""></option>
                        <option value="0">公司</option>
                        <option value="1">个人</option>
                    </select>
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">作品链接</label>
                <div class="layui-input-block">
                    <input type="text" name="work_src" required  lay-verify="required" placeholder="作品链接绝对地址" autocomplete="off" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item layui-form-text">
                <label class="layui-form-label">排序</label>
                <div class="layui-input-block">
                    <input type="number" name="order_num" placeholder="请输入数字" required  lay-verify="required" class="layui-input" autocomplete="off">
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">作品主图</label>
                <div class="layui-input-block">
                    <button type="button" class="layui-btn" id="main_img_btn">
                        <i class="layui-icon">&#xe67c;</i>上传图片
                    </button>
                    <div id="mainImg"></div>
                    <input type="hidden" value="" name="main_img">
                </div>
            </div>
            <div class="layui-form-item layui-form-text">
                <label class="layui-form-label">作品描述</label>
                <div class="layui-input-block">
                    <textarea name="workdesc" placeholder="请输入内容" class="layui-textarea"></textarea>
                </div>
            </div>
            <div class="layui-form-item">
                <div class="layui-input-block">
                    <button class="layui-btn" lay-submit lay-filter="formDemo">立即提交</button>
                    <button type="reset" class="layui-btn layui-btn-primary">重置</button>
                </div>
            </div>
        </form>
    </div>
    <div id="test1"></div>
</div>
<% include footer.ejs %>
<script>
    layui.use(['jquery',], function(args) {
        var $ = layui.jquery;
        layui.use('form', function(){
            var form = layui.form;
            //监听提交
            form.on('submit(formDemo)', function(data){
                //layer.msg(JSON.stringify(data.field));

            });
        });
        layui.use('upload', function(){
            var upload = layui.upload;
            //执行实例
            var uploadInst = upload.render({
                elem: '#main_img_btn' //绑定元素
                ,url: '/admin/upload/' //上传接口
                ,accept: 'images'
                ,done: function(res){
                    //上传完毕回调
                    if(res.code == 403 || res.code == 408){
                        layer.msg(res.msg)
                    }else if(res.code == 0){
                        var html = "<img style='display:block;width:30%;margin-top:10px;' src='"+res.data.src+"'>"
                        $('#mainImg').html(html)
                        $('input[name=main_img]').val(res.data.src)
                    }
                }
                ,error: function(){
                    //请求异常回调
                }
            });
        });
    })
</script>