<% include header.ejs %>
<div class="top">
    <span class="layui-breadcrumb" lay-separator="/">
        <a href="">博客管理</a>
        <a href="">文章管理</a>
        <a><cite>添加文章</cite></a>
    </span>
</div>
<div class="table-content">
    <div class="btns-self">

    </div>
    <form class="layui-form" action="/admin/articles/create" method="post">
        <div class="layui-form-item">
            <label class="layui-form-label">文章标题</label>
            <div class="layui-input-block">
                <input type="text" name="title" required  lay-verify="required" placeholder="请输入文章标题" autocomplete="off" class="layui-input">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">分类</label>
            <div class="layui-input-block">
                <select name="tab" lay-verify="required">
                    <option value=""></option>
                    <% tabs.forEach(function(tab){ %>
                    <option  value="<%= tab._id %>"><%= tab.tab_name %></option>
                    <% }) %>
                </select>
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">文章主图</label>
            <div class="layui-input-block">
                <button type="button" class="layui-btn" id="main_img_btn">
                    <i class="layui-icon">&#xe67c;</i>上传图片
                </button>
                <div id="mainImg"></div>
                <input type="hidden" value="" name="main_img">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">文章内容</label>
            <div class="layui-input-block">
                <textarea id="layout" style="display: none;" name="article_desc" lay-verify="article_desc"></textarea>
            </div>
        </div>
        <div class="layui-form-item">
            <div class="layui-input-block">
                <button class="layui-btn" lay-submit lay-filter="formDemo">立即提交</button>
                <button type="reset" class="layui-btn layui-btn-primary">重置</button>
            </div>
        </div>
    </form>
</div>
<% include footer.ejs %>
<script>
    layui.use(['jquery',], function(args) {
        var $ = layui.jquery;
        layui.use('layedit', function(){
            var layedit = layui.layedit;
            layedit.set({
                uploadImage: {
                    url: '/admin/upload/' //接口url
                }
            });
            var index = layedit.build('layout',{height: 600,}); //建立编辑器
            layui.use('form', function(){
                var form = layui.form;
                form.verify({
                    article_desc: function(value) {
                        return layedit.sync(index);
                    }
                });
                //监听提交
                form.on('submit(formDemo)', function(data){
                    //layer.msg(JSON.stringify(data.field));
                    //return false;
                });
            });
        });
        layui.use('upload', function(){
            var upload = layui.upload;
            //执行实例
            var uploadInst = upload.render({
                elem: '#main_img_btn' //绑定元素
                ,url: '/admin/upload/' //上传接口
                ,accept: 'images'
                ,done: function(res){
                    //上传完毕回调
                    if(res.code == 403 || res.code == 408){
                        layer.msg(res.msg)
                    }else if(res.code == 0){
                        var html = "<img style='display:block;width:30%;margin-top:10px;' src='"+res.data.src+"'>"
                        $('#mainImg').html(html)
                        $('input[name=main_img]').val(res.data.src)
                    }
                }
                ,error: function(){
                    //请求异常回调
                }
            });
        });
    })

</script>